<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/dashboardbg"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/shape1"
        android:textColor="#fff"
        android:textSize="18sp"
        android:text="Sk"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:id="@+id/customer_list_SymbleTextviewid"
        />



    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customer_list_NameTextviewid"
        android:layout_toRightOf="@+id/customer_list_SymbleTextviewid"
        android:text="Md Sohrab Hossain Sohel"
        android:textColor="#000"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/customer_list_NameTextviewid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customer_list_CustomerTypeTextviewid"
        android:layout_toRightOf="@+id/customer_list_SymbleTextviewid"
        android:text="Md Sohrab Hossain Sohel"
        android:textColor="#000"
        android:textSize="14sp"
       />

    <TextView
        android:layout_marginLeft="10dp"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customer_list_PriceTextviewid"
       android:text="280"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/customer_list_NameTextviewid"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
       />



</RelativeLayout>