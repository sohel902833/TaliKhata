<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/purple_200"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:id="@+id/mcrd1"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:padding="10dp"
                android:id="@+id/mr1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="মোট বাকি"
                    android:textSize="17sp"
                    android:textColor="#fff"
                    android:textStyle="bold|italic"
                    android:id="@+id/main_total_ramaining_balance"
                    />
                <TextView
                    android:layout_alignParentRight="true"
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="মোট দেবো"
                    android:textSize="17sp"
                    android:textColor="#fff"
                    android:textStyle="bold|italic"
                    android:id="@+id/main_total_given_balance"
                    />
            </RelativeLayout>
            <RelativeLayout
               android:layout_margin="15dp"
                android:padding="15dp"
                android:background="@drawable/dashboardbg"
                android:id="@+id/mr2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="আজকে পেয়েছি"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:textStyle="bold|italic"
                    android:id="@+id/main_today_TotalGetMoney"
                    />
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="আজকে দিয়েছি"
                    android:textSize="17sp"
                    android:textColor="#000"
                    android:textStyle="bold|italic"
                    android:id="@+id/main_today_TotalGivenMoney"
                    />
            </RelativeLayout>

        </LinearLayout>
</androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ml1"
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/mcrd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/main_PersonSearchEdittextid"
            android:layout_weight="4.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:hint="খুজুন"
            android:background="@drawable/dashboardbg"
            android:padding="15dp"

            />

        <Button
            android:id="@+id/main_PersonSearchButtonid"
            android:paddingBottom="10dp"
            android:layout_weight="0.3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
           android:background="@drawable/person_search_icon"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainCustomerListRecyclerviewid"
        android:layout_below="@+id/ml1"
        android:layout_marginTop="7dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="50dp"
        android:src="@drawable/add_person_icon"
        android:tint="@android:color/white"
        android:backgroundTint="@color/purple_500"
        android:id="@+id/add_Customer_FloatingButtonid"
        />


</RelativeLayout>